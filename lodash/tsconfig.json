{
  "compilerOptions": {
    "target": "es5",                      
    "lib": ["DOM","DOM.Iterable", "ES2020"],
    "module": "CommonJS",                      
    "rootDir": "./",            
    "outDir": "./lib",         
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true,        
    "strict": true,             
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules"],
  "include": ["./index.ts", "./**/index.ts"]
}
