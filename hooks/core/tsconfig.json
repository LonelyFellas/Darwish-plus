{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM","DOM.Iterable", "ES2020"],
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./lib",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "Node",
    "types": ["@darwish/types", "@types/node", "@types/jest", "vitest/globals", "@testing-library/jest-dom"],
  },
  "exclude": ["node_modules", "./vitest.config.ts"],
  "include": ["./index.ts", "./utils/*", "__tests__/*" ]
}
