{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM","DOM.Iterable", "ES2020"],
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./lib",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
